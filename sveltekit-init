#!/usr/bin/env sh

project=$1

cd "$project"

npm install -D

npx svelte-add@latest tailwindcss

npm install -D

npm install -D @leveluptuts/bookit@latest daisyui@latest

mkdir "src/routes/book"
touch "src/routes/book/+page.svelte"

cp -f "$HOME/.sveltekit-init/svelte.config.cjs" .
cp -f "$HOME/.sveltekit-init/tailwind.config.js" .
cp "$HOME/.sveltekit-init/+layout-root.svelte" "src/routes/"
cp "$HOME/.sveltekit-init/+layout@root.svelte" "src/routes/book/"
cp "$HOME/.sveltekit-init/[parent]-[title].svelte" "src/routes/book/"

mkdir src/bookit

cp "$HOME/.sveltekit-init/Basic.story.svelte" "src/bookit/"
cp "$HOME/.sveltekit-init/TestComponent.svelte" "src/bookit/"
cp "$HOME/.sveltekit-init/Docs.Basic.story.svelte" "src/bookit/"
